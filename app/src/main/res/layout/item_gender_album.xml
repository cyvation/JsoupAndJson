<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_fragment_online_gender_album"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:shadowColor="#6b6b6b"
            android:shadowRadius="1.0"
            android:shadowDx="1"
            android:shadowDy="2"
            android:id="@+id/txt_fragment_online_gender_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_fragment_online_gender_album"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_dark_gray_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_fragment_online_gender_album_title"
            android:layout_below="@+id/txt_fragment_online_gender_album_title"
            android:lines="1"
            android:textSize="12sp"
            android:id="@+id/txt_fragment_online_gender_album_name_artist"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text_gray_color" />

    </RelativeLayout>


</android.support.v7.widget.CardView>