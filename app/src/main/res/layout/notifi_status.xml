<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:src="@drawable/background_nav" />

    <ImageView
        android:id="@+id/status_bar_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#a0dddddd"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#ddd"
        android:orientation="vertical"
        android:paddingBottom="5dp"

        android:paddingTop="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/status_bar_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_song"
            android:textColor="@color/text_dark_gray_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/status_bar_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waiting" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/status_bar_previous"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="30dp"
            android:background="#000"
            android:src="@drawable/ic_player_previous"
            android:contentDescription="Play"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:id="@+id/status_bar_play"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="#000"
            android:scaleType="centerInside"
            android:src="@drawable/button_state_player" />

        <ImageView
            android:id="@+id/status_bar_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#000"
            android:padding="5dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_player_next" />

    </LinearLayout>


</LinearLayout>