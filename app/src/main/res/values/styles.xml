<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ToolbarPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">#84000000</item>
    </style>

    <style name="ButtonSearch">

        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/button_search</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">8dp</item>
    </style>


    <style name="ImageBottomBar">
        <item name="android:padding">1dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">@dimen/image_size_bottom_bar_icon</item>
        <item name="android:layout_width">@dimen/image_size_bottom_bar_icon</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextTitleBottomBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextItemCategoryAlbum">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
