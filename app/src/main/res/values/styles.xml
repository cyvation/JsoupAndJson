<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ToolbarPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">#84000000</item>
    </style>

    <style name="ButtonSearch">

        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/button_search</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">8dp</item>
    </style>


    <color name="white">#ffffff</color>
</resources>
